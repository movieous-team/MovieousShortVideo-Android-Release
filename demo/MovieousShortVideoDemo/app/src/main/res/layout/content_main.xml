<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".MainActivity"
    tools:showIn="@layout/activity_main">

    <LinearLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:padding="20dp">

        <Button
            android:id="@+id/camera_record"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="视频录制"
            android:textSize="15sp" />

        <Button
            android:id="@+id/video_trim"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="视频剪辑"
            android:textSize="15sp" />

        <Button
            android:id="@+id/video_merge"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="视频拼接"
            android:textSize="15sp" />

        <Button
            android:id="@+id/video_edit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="视频编辑"
            android:textSize="15sp" />

        <Button
            android:id="@+id/image_video"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="图片合成"
            android:textSize="15sp" />

        <Button
            android:id="@+id/camera_movie_record"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="视频合拍"
            android:textSize="15sp" />

        <Button
            android:id="@+id/view_record"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="View 录制"
            android:textSize="15sp" />

        <Button
            android:id="@+id/screen_record"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="屏幕录制"
            android:textSize="15sp" />

        <Button
            android:id="@+id/image_edit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="图片编辑"
            android:textSize="15sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:orientation="vertical">

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@android:color/darker_gray" />

            <TextView
                android:id="@+id/tv_version"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal" />
        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>